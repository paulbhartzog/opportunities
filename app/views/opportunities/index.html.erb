<h1>Listing opportunities</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Link</th>
    <th>Description</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th>Icon</th>
    <th>Importance</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @opportunities.each do |opportunity| %>
  <tr>
    <td><%= opportunity.id %></td>
    <td><%= opportunity.title %></td>
    <td><%= opportunity.link %></td>
    <td><%= opportunity.description %></td>
    <td><%= opportunity.startdate %></td>
    <td><%= opportunity.enddate %></td>
    <td><%= opportunity.icon %></td>
    <td><%= opportunity.importance %></td>
    <td><%= link_to 'Show', opportunity %></td>
    <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
    <td><%= link_to 'Destroy', opportunity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

